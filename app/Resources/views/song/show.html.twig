{% extends 'base.html.twig' %}

{% block body %}
<div class="card" style="width: 100%;">
  <div class="card-body">
    <h5 class="card-title">{{song.title}}</h5>
    <table class="table table-striped">
        <tbody>
            <tr>
                <th>Verses</th>
                <td>{{ song.verses }}</td>
            </tr>
            <tr>
                <th>Chorus</th>
                <td>{{ song.chorus == true ? 'Has Chorus' : 'No Chorus' }}</td>
            </tr>
            <tr>
                <th><a href="{{path('song_edit', {'id': song.id, 'c': choir.id})}}">Edit</a></th>
                <td></td>
            </tr>
            <tr>
                <th><a href="{{path('song_delete', {'id': song.id})}}">Delete</a></th>
                <td></td>
            </tr>
        </tbody>
    </table>
    <div class="btn-group" role="group" aria-label="Basic example">
      <a href="{{path('song_attendance_list', {'c': choir.id, 'sng': song.id})}}" class="btn btn-secondary">Attendance</a>
      <a href="#" class="btn btn-secondary">Right</a>
    </div>

  </div>
</div>

    <ul>
        <li>
            <a href="{{ path('song_index') }}">Back to the list</a>
        </li>
    </ul>
{% endblock %}

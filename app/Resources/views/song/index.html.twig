{% extends 'base.html.twig' %}

{% block body %}
    <div class="card" style="width: 100%;">
      <div class="card-body">
        <h5 class="card-title">Songs</h5>
        <div class="list-group">
          {% for song in songs %}
            <a href="{{path('song_show', {'id': song.id, 'c': choir.id})}}" class="list-group-item list-group-item-action">{{song.title}}</a>
          {% endfor %}
          <a href="{{path('song_new', {'c': choir.id})}}" class="list-group-item list-group-item-action active">+ Add Song</a>
        </div>
      </div>
    </div>
    
{% endblock %}

{% extends 'base.html.twig' %}

{% block body %}
    <div class="card" style="width: 100%;">
      <div class="card-body">
        <h5 class="card-title">Plan for {{rehearsal.day|date("l jS F Y")}}</h5>
        <div class="list-group">
          {% for plan in plans %}
            <a href="{{path('plan_show', {'id': plan.id, 'c': choir.id, 'r': rehearsal.id})}}" class="list-group-item list-group-item-action">{{plan.commence|date("g:i A")}} - {{plan.conclude|date("g:i A")}} - {{plan.song.title}} - ToDo: {{plan.todo}}</a>
          {% endfor %}
          <a href="{{path('plan_new', {'c': choir.id, 'r': rehearsal.id})}}" class="list-group-item list-group-item-action active">+ Add Today's Plan</a>
        </div>
      </div>
    </div>
    
{% endblock %}
